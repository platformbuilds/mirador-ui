# Unified Dockerfile - Single container for Mirador UI + Mock API
# This combines the frontend application and mock API server in one container

FROM node:20-alpine AS base

# Install system dependencies
RUN apk add --no-cache \
    curl \
    nginx \
    && rm -rf /var/cache/apk/*

# Create application user
RUN addgroup -g 1001 -S mirador && \
    adduser -S mirador -u 1001 -G mirador

# Set working directory
WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm

# Copy package files and install dependencies
COPY package.json pnpm-lock.yaml ./
RUN pnpm install --frozen-lockfile

# Copy source code
COPY . .

# Build the frontend application
RUN pnpm build

# Stage 2: Runtime with both frontend and API
FROM node:20-alpine AS unified

# Install system dependencies
RUN apk add --no-cache \
    curl \
    nginx \
    && rm -rf /var/cache/apk/*

# Create application user
RUN addgroup -g 1001 -S mirador && \
    adduser -S mirador -u 1001 -G mirador

# Install pnpm for running the mock API
RUN npm install -g pnpm

# Create directories
RUN mkdir -p /app/frontend /app/api /run/nginx

# Copy built frontend assets
COPY --from=base /app/dist /app/frontend

# Copy mock API files from the base build context and install dependencies
WORKDIR /app/api
COPY --from=base /app/mock/server.js ./
# Create a minimal package.json for the mock API
RUN echo '{"name":"mock-api","version":"1.0.0","type":"module","dependencies":{"express":"^5.1.0","cors":"^2.8.5"}}' > package.json
RUN pnpm install

# Create nginx configuration
RUN mkdir -p /etc/nginx/conf.d
COPY --chown=mirador:mirador <<EOF /etc/nginx/conf.d/default.conf
server {
    listen 80;
    server_name localhost;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Frontend - serve static files
    location / {
        root /app/frontend;
        index index.html;
        try_files \$uri \$uri/ /index.html;
        
        # Cache static assets
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)\$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }
    
    # API proxy - forward API calls to mock server
    location /api/ {
        proxy_pass http://localhost:3001/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade \$http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host \$host;
        proxy_set_header X-Real-IP \$remote_addr;
        proxy_set_header X-Forwarded-For \$proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto \$scheme;
        proxy_cache_bypass \$http_upgrade;
        
        # CORS headers for API
        add_header 'Access-Control-Allow-Origin' '*' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization' always;
        
        # Handle preflight requests
        if (\$request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization';
            add_header 'Access-Control-Max-Age' 1728000;
            add_header 'Content-Type' 'text/plain charset=UTF-8';
            add_header 'Content-Length' 0;
            return 204;
        }
    }
    
    # Health check endpoint
    location /health {
        access_log off;
        add_header Content-Type text/plain;
        return 200 "healthy\n";
    }
    
    # Security - block hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}
EOF

# Create startup script
COPY --chown=root:root <<EOF /app/start.sh
#!/bin/sh
set -e

echo "Starting Mirador UI unified container..."

# Start mock API in background
echo "Starting mock API server..."
cd /app/api
su mirador -c "NODE_ENV=development PORT=3001 node server.js" &
API_PID=\$!

# Wait a moment for API to start
sleep 2

# Start nginx in foreground
echo "Starting nginx..."
nginx -g "daemon off;" &
NGINX_PID=\$!

# Function to handle shutdown
shutdown() {
    echo "Shutting down services..."
    kill \$API_PID 2>/dev/null || true
    kill \$NGINX_PID 2>/dev/null || true
    exit 0
}

# Trap signals
trap shutdown SIGTERM SIGINT

# Wait for processes
wait \$NGINX_PID
EOF

# Create nginx directories and fix permissions
RUN mkdir -p /var/cache/nginx/client_temp \
             /var/cache/nginx/proxy_temp \
             /var/cache/nginx/fastcgi_temp \
             /var/cache/nginx/uwsgi_temp \
             /var/cache/nginx/scgi_temp \
             /var/log/nginx && \
    chown -R mirador:mirador /app && \
    chown -R mirador:mirador /var/cache/nginx && \
    chown -R mirador:mirador /var/log/nginx && \
    touch /var/run/nginx.pid && \
    chown mirador:mirador /var/run/nginx.pid && \
    chmod +x /app/start.sh

# Expose port 80 for the unified service
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:80/health && \
        curl -f http://localhost:3001/api/v1/kpi/defs || exit 1

# Set working directory back to /app
WORKDIR /app

# Start both services using our startup script
CMD ["/app/start.sh"]

# Metadata
LABEL maintainer="platformbuilds"
LABEL description="Mirador UI - Unified container with frontend and mock API"
LABEL version="1.0.0"
{
  "name": "mirador-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "dev:fe": "vite",
    "dev:mock": "node mock/server.js",
    "dev:all": "concurrently -k \"pnpm dev:mock\" \"pnpm dev:fe\"",
    "docker:build": "docker build -t mirador-ui:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t mirador-ui:dev .",
    "docker:run": "docker run -d -p 3000:80 --name mirador-ui-container mirador-ui:latest",
    "docker:run:dev": "docker run -d -p 5173:5173 -v $(pwd):/app -v /app/node_modules --name mirador-ui-dev-container mirador-ui:dev",
    "docker:stop": "docker stop mirador-ui-container || true",
    "docker:stop:dev": "docker stop mirador-ui-dev-container || true",
    "docker:clean": "docker rm mirador-ui-container || true && docker rmi mirador-ui:latest || true",
    "docker:clean:dev": "docker rm mirador-ui-dev-container || true && docker rmi mirador-ui:dev || true",
    "docker:logs": "docker logs -f mirador-ui-container",
    "docker:logs:dev": "docker logs -f mirador-ui-dev-container",
    "docker:shell": "docker exec -it mirador-ui-container /bin/sh",
    "docker:shell:dev": "docker exec -it mirador-ui-dev-container /bin/sh",
    "compose:up": "docker-compose up -d",
    "compose:up:dev": "docker-compose --profile dev up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "compose:build": "docker-compose build",
    "compose:rebuild": "docker-compose down && docker-compose build && docker-compose up -d",
    "unified:build": "docker build -f Dockerfile.unified -t mirador-ui:unified .",
    "unified:up": "docker-compose -f docker-compose.unified.yml up -d",
    "unified:down": "docker-compose -f docker-compose.unified.yml down",
    "unified:logs": "docker-compose -f docker-compose.unified.yml logs -f",
    "unified:rebuild": "docker-compose -f docker-compose.unified.yml down && docker build -f Dockerfile.unified -t mirador-ui:unified . && docker-compose -f docker-compose.unified.yml up -d"
  },
  "dependencies": {
    "@types/react-grid-layout": "^1.3.5",
    "axios": "^1.13.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-grid-layout": "^1.5.2",
    "use-debounce": "^10.0.6",
    "valtio": "^2.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@eslint/js": "^9.36.0",
    "@storybook/addon-a11y": "^10.0.4",
    "@storybook/addon-docs": "^10.0.4",
    "@storybook/addon-onboarding": "^10.0.4",
    "@storybook/addon-vitest": "^10.0.4",
    "@storybook/react-vite": "^10.0.4",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/browser-playwright": "^4.0.7",
    "@vitest/coverage-v8": "^4.0.7",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "eslint-plugin-storybook": "^10.0.4",
    "express": "^5.1.0",
    "globals": "^16.4.0",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "storybook": "^10.0.4",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "uuid": "^13.0.0",
    "vite": "^7.1.7",
    "vitest": "^4.0.7"
  }
}